                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingVertical="@dimen/_15sdp"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:src="@drawable/ic_relationship" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/font_regular"
                    android:text="Relationship"
                    android:textColor="@color/colorMenuText"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMenuViewBg" />


            <LinearLayout
                android:id="@+id/lnrPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingVertical="@dimen/_15sdp"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:src="@drawable/ic_payment" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="8"
                    android:fontFamily="@font/font_regular"
                    android:text="Payment"
                    android:textColor="@color/colorMenuText"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <View
                android:id="@+id/viewPayment"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMenuViewBg" />

            <LinearLayout
                android:id="@+id/lnrTransactionHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_15sdp"
                android:visibility="gone"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:src="@drawable/ic_payment" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="8"
                    android:fontFamily="@font/font_regular"
                    android:text="Transaction History"
                    android:textColor="@color/colorMenuText"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="1dp"
                android:background="@color/colorMenuViewBg" />

            <LinearLayout
                android:id="@+id/lnrSummaryReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingVertical="@dimen/_15sdp"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.5"
                    android:src="@drawable/ic_summary_report" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="8"
                    android:fontFamily="@font/font_regular"
                    android:text="Summary Report"
                    android:textColor="@color/colorMenuText"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMenuViewBg" />

            <LinearLayout
                android:id="@+id/lnrStaff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingVertical="@dimen/_15sdp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_staff" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/font_regular"
                    android:text="Staff"
                    android:textColor="@color/colorMenuText"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <View
                android:id="@+id/viewStaff"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMenuViewBg" />

            <LinearLayout
                android:id="@+id/lnrProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingVertical="@dimen/_15sdp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/font_regular"
                    android:text="Profile"
                    android:textColor="@color/colorMenuText"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMenuViewBg" />

            <LinearLayout
                android:id="@+id/lnrCenterInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_15sdp"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_center_info_small" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/font_regular"
                    android:text="Center Information"
                    android:textColor="@color/colorMenuText"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMenuViewBg" />

