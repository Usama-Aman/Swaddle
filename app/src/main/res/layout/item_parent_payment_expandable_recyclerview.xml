<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/font_medium"
            android:text="Bill (Recursive)"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDueOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:alpha=".5"
            android:text="Due On: 23 Aug 2021"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintStart_toStartOf="@id/tvMain"
            app:layout_constraintTop_toBottomOf="@id/tvMain" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvDueOn"
            android:text="$2000.00"
            android:textSize="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textColor="#A6A6A6"
            android:fontFamily="@font/font_medium"
            app:layout_constraintTop_toBottomOf="@id/tvMain" />
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:lineSpacingExtra="@dimen/_1sdp"
            android:fontFamily="@font/font_regular"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintTop_toBottomOf="@id/tvDueOn"
            android:text="If you have read this far, we both know you are serious about succeeding, getting the most out of life, and attaining your goals. Now, how do you “keep the fire burning” during life’s daily struggle?"
            app:layout_constraintStart_toStartOf="@id/tvMain"
            app:layout_constraintEnd_toEndOf="@id/tvPrice"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/martini"
            android:alpha=".1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>