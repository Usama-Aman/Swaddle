<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.common.SelectorActivity">

        <LinearLayout
            android:id="@+id/layViewBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgViewBack"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_back"
                app:tint="@color/colorLoginBlack" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgViewMainLogo"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/img_main_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSigninHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/font_bold"
            android:text="CREATE YOUR ACCOUNT"
            android:textColor="@color/colorLoginBlack"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgViewMainLogo" />

        <TextView
            android:id="@+id/tvSignINMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:text="Let's get started. Please choose the profile that applies to you."
            android:textColor="@color/grey_900_alpha_50"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSigninHeading" />

        <RelativeLayout
            android:id="@+id/btnProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/selector_btn_signup"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSignINMsg">

            <TextView
                android:id="@+id/tvProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/font_semi_bold"
                android:text="I\'m a Provider"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/selector_btn_signup"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="@id/btnProvider"
            app:layout_constraintStart_toStartOf="@id/btnProvider"
            app:layout_constraintTop_toBottomOf="@id/btnProvider">


            <TextView
                android:id="@+id/tvParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/font_semi_bold"
                android:text="I\'m a Parent/Relative"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnStaff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"

            android:background="@drawable/selector_btn_signup"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="@id/btnProvider"
            app:layout_constraintStart_toStartOf="@id/btnProvider"
            app:layout_constraintTop_toBottomOf="@id/btnParent">

            <TextView
                android:id="@+id/tvStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/font_semi_bold"
                android:text="I\'m a Staff Member"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/lnrSigninLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingVertical="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:text="Have an Account?" />

            <TextView
                android:id="@+id/tvSignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/font_regular"
                android:text="Sign In"
                android:textColor="@color/colroBlue" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>